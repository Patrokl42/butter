.dishes.row
    each item in dishes
        .dishes__item.col-1-of-2
            .dishes__image
                img(src=item.image)
            .dishes__content
                h3.dishes__name=item.name
                .cost
                    .cost__price
                        span=item.price
                        span=item.currency
                    .cost__portion
                        span=item.portion
                        span='грам'
                p.dishes__discription=item.discription
                .quantity
                    .btn.btn--pink='Додати до кошика'
                    .quantity__inner
                        span='Кількість:'
                        .quantity__controls
