section.booking
    .booking__inner
        span.box-title='Забронюй місце в ресторані'
        form(action="/").booking-form
            .input-block
                .input-block__inner.input-person
                    .input-block__plus
                        <svg width="10" height="11" viewBox="0 0 10 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.83057 0.75V10.25" stroke="#333333" stroke-width="2"/><path d="M0 5.5L9.5 5.5" stroke="#333333" stroke-width="2"/></svg>
                    .input-block__content
                        span='1 '
                        span='персона'
                    .input-block__minus
                        <svg width="10" height="3" viewBox="0 0 10 3" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.5 1.5L10 1.5" stroke="#333333" stroke-width="2"/></svg>
            .input-block
                .input-block__inner.input-day
                    .input-block__plus
                        <svg width="10" height="11" viewBox="0 0 10 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.83057 0.75V10.25" stroke="#333333" stroke-width="2"/><path d="M0 5.5L9.5 5.5" stroke="#333333" stroke-width="2"/></svg>
                    .input-block__content
                        span='Понеділок'
                    .input-block__minus
                        <svg width="10" height="3" viewBox="0 0 10 3" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.5 1.5L10 1.5" stroke="#333333" stroke-width="2"/></svg>
            .select-wrapper
                select(name="time").select.select--time
                    option(value='13:00')='13:00'
                    option(value='14:10')='14:10'
                    option(value='15:40')='15:40'
                    option(value='16:40')='16:40'
                    option(value='17:50')='17:50'
                <svg class="select-arrow" width="12" height="14" viewBox="0 0 17 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L8.39803 6.20493L16.3651 1" stroke="#333333" stroke-width="2"></path></svg>
            input(placeholder="Ім’я" name='phone-number').input.input--name
            input(placeholder="+380 -- -- -- ---" name='phone-number' data-mask="+380 00 00 00 000").input.input--phone-number
            button(type='submit').btn.btn--green='ЗАБРОНЮВАТИ'
        .hide
            input(id='personsInput' name="persons" type="hidden")
            input(id='dayInput' name="day" type="hidden")